@model IEnumerable<Autoparts.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="card rounded-5 mt-5 animate__animated animate__fadeInUp">
    <div class="card-header bg-success rounded-5 py-3">
        <h1 class="display-4 text-white text-center">Users</h1>
    </div>
    <div class="card-body">
        <div class="text-center mb-3">
            <a asp-action="Create" class="btn btn-primary rounded-5">Create New</a>
        </div>
        <table class="table table-striped border-0 table-borderless">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Login)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Login)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary rounded-5">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-5">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger rounded-5">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
