@model Autoparts.Models.UserFormViewModel

@{
    ViewData["Title"] = "Register";
}


<div class="card rounded-5 mt-5 animate__animated animate__fadeInUp">
    <div class="card-header bg-success rounded-5 py-5">
        <h1 class="display-4 text-white text-center">Sign Up</h1>
    </div>
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-3">
                        <input asp-for="Login" class="form-control rounded-5 p-2" placeholder="Login" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" asp-for="Password" class="form-control rounded-5 p-2" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3 d-flex justify-content-center">
                        <input type="submit" value="Register" class="btn btn-success rounded-5 p-2 px-5" />
                    </div>
                    <div class="form-group mt-5">
                        <p class="pt-5 text-muted d-flex justify-content-center">Already have an account?</p>
                        <a asp-action="Login" class="btn btn-outline-success d-block rounded-5">Sign in now</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>